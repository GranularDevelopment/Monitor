                 />
-->
         <Label Grid.Row="7" 
               Grid.Column="1"
               Style="{StaticResource labelSecondaryStyle}"
               Text="Email" />

         <Switch 
         IsToggled="{Binding Email}"
                Grid.Row="7"
                 Grid.Column="1"
                 HorizontalOptions="End"
                 />

        <Label Grid.Row="8" 
               Grid.Column="1"
               Style="{StaticResource labelSecondaryStyle}"
               Text="Push Notification" />

         <Switch 
         IsToggled="{Binding Push}"
                Grid.Row="8"
                 Grid.Column="1"
                 HorizontalOptions="End" />

    </Grid>
        <StackLayout Style="{StaticResource footerStyle}" >
            <Button Style="{StaticResource submitButtonStyle}"
                    Text="[ Apply ]"
                    Command="{Binding ApplyCommand}"
                        />
        </StackLayout>
    </StackLayout>
