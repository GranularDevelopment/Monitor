        <BoxView Grid.Row="5"
                 Grid.ColumnSpan="3"
                 Color="Black"
                 WidthRequest="1"
                 />

        <Label Grid.Row="6" 
               Grid.Column="1"
               Style="{StaticResource labelSecondaryStyle}"
               Text="Alerts" />


        <!--<Label Grid.Row="7" 
               Grid.Column="1"
               Style="{StaticResource labelSecondaryStyle}"
               Text="Text (SMS)" />-->

         <!--<Switch 
         IsToggled="{Binding SMS}"
