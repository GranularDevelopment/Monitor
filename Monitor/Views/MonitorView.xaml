      Grid Padding="0,40,0,0">
      <Grid.RowDefinitions>
        <RowDefinition Height="40" />j
        <RowDefinition />
        <RowDefinition />
        <RowDefinition />
        <RowDefinition />
        <RowDefinition />
      
      </Grid.RowDefinitions>

      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="40" />
      </Grid.ColumnDefinitions> 


        <Entry
            Grid.Row="0"
            Grid.Column="1"
            Style="{StaticResource entryStyle}"
            x:Name="usernameEntry"
            Placeholder="{i18n:Translate EmailPlaceholder}" 
            Text="{Binding Username.Value, Mode=TwoWay}" >
        </Entry>

        <Label 
            Grid.Row="1" 
            Grid.Column="1" 
            HorizontalOptions="Center" 
            Text="{Binding Username.Errors, Converter={StaticResource FirstValidationErrorConverter}"
            Style="{StaticResource ValidationErrorLabelStyle}" />

        <Entry 
            Grid.Row="2"
            Grid.Column="1"
            x:Name="passwordEntry" 
            Style="{StaticResource entryStyle}"
            IsPassword="true" 
            Placeholder="{i18n:Translate PasswordPlaceholder}" 
            Text="{Binding Password.Value, Mode=TwoWay}">
            </Entry>

        <Label 
            Grid.Row="3" 
            Grid.Column="1" 
            HorizontalOptions="Center" 
            Text="{Binding Password.Errors, Converter={StaticResource FirstValidationErrorConverter}"
            Style="{StaticResource ValidationErrorLabelStyle}" />

        </Grid>
            


        <StackLayout VerticalOptions="EndAndExpand" >

             <ActivityIndicator 
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}" />

                <Button Style="{StaticResource submitButtonStyle}" 
                    Text="{i18n:Translate SignInBtn}"
                    Command="{Binding SignInCommand}"
                        />
                <StackLayout
                Margin="20,0,20,0"
                Orientation="Horizontal"
                HorizontalOptions="FillAndExpand"
                > 

                <Button 
                    HorizontalOptions="StartAndExpand"
                    Style="{StaticResource buttonLinkStyle}"
                    Text="{i18n:Translate ForgotPasswordBtn}"
                    Command="{Binding ForgotPasswordCommand}"
                        />

                <Button 
                    Style="{StaticResource buttonLinkStyle}"
                    HorizontalOptions="EndAndExpand"
                    Text="{i18n:Translate SignUpBtn}"
                    Command="{Binding SignUpCommand}"
                        />

        <StackLayout Style="{StaticResource footerStyle}" >
            <Button Style="{StaticResource submitButtonStyle}"
                    Text="[ Apply ]"
                    Command="{Binding ApplyCommand}"
                        />
        </StackLayout>
    </StackLayout>
